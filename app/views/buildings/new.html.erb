<%- if @building.errors.size > 0 -%>
  <ul class="errors">
    <%- @building.errors.full_messages.each do |error| -%>
      <li><%= error %></li>
    <%- end -%>
  </ul>
<%- end -%>

<%= form_for @building do |f| %>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, "State Abbreviation"%>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :postal_code %>
    <%= f.number_field :postal_code %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.submit 'Record' %>
  </div>
<%- end -%>